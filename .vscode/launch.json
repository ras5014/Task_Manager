{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server/src/server.ts",
      "runtimeExecutable": "tsx",
      "runtimeArgs": ["--inspect"],
      "cwd": "${workspaceFolder}/server",
      "envFile": "${workspaceFolder}/server/.env",
      "console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true
    }
  ]
}
